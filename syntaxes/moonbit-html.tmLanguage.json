{
  "scopeName": "text.html.moonbit",
  "injectionSelector": "L:text.html.basic,L:text.html.vue,L:text.html.svelte",
  "patterns": [
    {
      "include": "#moonbit-script-content"
    }
  ],
  "repository": {
    "moonbit-script-content": {
      "begin": "(<)(script)\\s+(?:(type|lang)\\s*(=)\\s*((['\"])(text\\/)?mbt\\6|(['\"])text\\/moonbit\\8))([^>]*)(>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.html" },
        "2": { "name": "entity.name.tag.script.html" },
        "3": { "name": "entity.other.attribute-name.html" },
        "4": { "name": "punctuation.separator.key-value.html" },
        "5": { "name": "string.quoted.html" },
        "9": { "name": "punctuation.definition.tag.html" },
        "10": { "name": "punctuation.definition.tag.html" }
      },
      "end": "(</)(script)(>)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.html" },
        "2": { "name": "entity.name.tag.script.html" },
        "3": { "name": "punctuation.definition.tag.html" }
      },
      "contentName": "source.moonbit",
      "patterns": [
        {
          "include": "source.moonbit"
        }
      ]
    }
  }
} 